
<div class=" container pt-5">
  <table class="table table-striped table-hover" id="productsTable">
    <thead>
      <tr>
        <th scope="col">FIRST NAME</th>
        <th scope="col">LAST NAME</th>
        <th scope="col">EMAIL</th>
        <th scope="col">MOBILE NUMBER</th>
        <th scope="col">STATUS</th>
      </tr>
    </thead>
    <tbody>
      {{#each allusers}}

      <tr>

        <td scope="row">{{this.fname}}</td>
        <td scope="row">{{this.lname}}</td>
        <td scope="row">{{this.email}}</td>
        <td scope="row">{{this.mobile}}</td>

        {{#if ActiveStatus}}
       
          <td class="btn btn-danger p-2 "> <a href="/admin/userblock/{{this._id}}" class="text-light">Block</a></td>
        
        {{else}}
        
          <td class="btn btn-success p-2"><a href="/admin/useractive/{{this._id}}" class="text-light" >  Active </a></td>

        {{/if}}
      </tr>
      {{/each}}



    </tbody>
  </table>


</div>


  

<script>

$(document).ready( function () {
    $('#productsTable').DataTable();
} );
   
</script>
