<div class="container pt-5">
    <table class="table table-striped" id="productsTable">
        <thead>
            <tr>
                <th scope="col">COUPEN ID </th>
                <th scope="col">COUPEN CODE</th>
                <th scope="col">COUPEN DESCRIPTION</th>
                <th scope="col">COUPEN DISCOUNT</th>
                <th scope="col">EDIT</th>
                <th scope="col">DELETE</th>
            </tr>
        </thead>
        <tbody>
            {{#if coupenExist}}
            <p class="text-danger">THE COUPEN IS ALREDY EXISTED</p>

            {{/if}}
            {{#each allCoupens}}

            <tr>
                <th scope="row">{{this.coupenid}}</th>
                <td>{{this.coupencode}}</td>
                <td>{{this.coupendescription}}</td>
                <td>{{this.coupendiscount}}</td>
                <td><button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModalCenteryu{{this._id}}">
                Edit
            </button></td>
                <td><a href="/admin/delete-coupen/{{this._id}}" class="btn btn-danger" >Delete</td></a>

            </tr>
            <!-- Button trigger modal -->
            

            <!-- Modal -->
            <div class="modal fade" id="exampleModalCenteryu{{this._id}}" tabindex="-1" role="dialog"
                aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
                <div class="modal-dialog modal-dialog-centered" role="document">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="exampleModalLongTitle">Edit Coupens</h5>
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                        <div class="modal-body">
                            <div class="container ">
                                <form action="/admin/update-coupen/{{this._id}}" method="post" id="viewcoupen">
                                    <div class="mb-3">
                                        <div class="col-md-12 form-group ">
                                            <input type="text" class="form-control" id="coupenid" name="coupenid"
                                                value="{{this.coupenid}}" placeholder="COUPEN ID" />
                                        </div>
                                        <div class="col-md-12 form-group ">
                                            <input type="text" class="form-control" id="coupencode" name="coupencode"
                                                value="{{this.coupencode}}" placeholder="COUPEN CODE" />
                                        </div>
                                        <div class="col-md-12 form-group ">
                                            <input type="text" class="form-control" id="coupendescription"
                                                name="coupendescription" value="{{this.coupendescription}}"
                                                placeholder="COUPEN DESCRIPTION" />
                                        </div>
                                        <div class="col-md-12 form-group ">
                                            <input type="text" class="form-control" id="coupendiscount"
                                                name="coupendiscount" value="{{this.coupendiscount}}"
                                                placeholder="COUPEN DISCOUNT" />
                                        </div>
                                    </div>
                                    <div class="modal-footer">
                                        <button type="button" class="btn btn-danger"
                                            data-dismiss="modal">Close</button>
                                        <button type="submit" class="btn btn-success">Update</button>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            {{/each}}
        </tbody>
    </table>
</div>
<!-- Button trigger modal -->
<div class="text-center pt-2">
    <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModalCenter">
        ADD COUPENS
    </button>
</div>
<!-- Modal -->
<div class="modal fade" id="exampleModalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle"
    aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLongTitle">ADD COUPENS</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="container ">
                    <form action="/admin/addcoupen" method="post" id="viewcoupen">
                        <div class="mb-3">
                            <div class="col-md-12 form-group ">
                                <input type="text" class="form-control" id="coupenid" name="coupenid" value=""
                                    placeholder="COUPEN ID" />
                            </div>
                            <div class="col-md-12 form-group ">
                                <input type="text" class="form-control" id="coupencode" name="coupencode" value=""
                                    placeholder="COUPEN CODE" />
                            </div>
                            <div class="col-md-12 form-group ">
                                <input type="text" class="form-control" id="coupendescription" name="coupendescription"
                                    value="" placeholder="COUPEN DESCRIPTION" />
                            </div>
                            <div class="col-md-12 form-group ">
                                <input type="text" class="form-control" id="coupendiscount" name="coupendiscount"
                                    value="" placeholder="COUPEN DISCOUNT" />
                            </div>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
                            <button type="submit" class="btn btn-primary">SUBMIT</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>


