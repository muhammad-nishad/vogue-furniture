<style type="text/css">
    .drift-demo-trigger {
        width: 40%;
    }

    .detail {
        position: absolute;
        width: 95%;
        float: left;
    }



    @media (max-width: 900px) {


        .detail,
        .drift-demo-trigger {
            float: none;
        }

        .drift-demo-trigger {
            max-width: 100%;
            width: auto;
            margin: 0 auto;
        }

        .detail {
            margin: 0;
            width: auto;
        }



        .responsive-hint {
            display: none;
        }

        .drift-bounding-box {
            display: none;
        }
    }
