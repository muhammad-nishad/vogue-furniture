<style>
  .error {
    color: red;
    border: 1px solid red;
  }
</style>

<script>

  
  $("#userLogin").validate({
    rules: {
      email: {
        required: true,
        minlength: 5
      },
      password:
      {
        required: true,
        minlength: 5,
        maxlength: 15
      },
      number:
      {
        required:true
      }
    },
    messages:
    {
      password: { required: "Please Enter Your Password" },
      email: {
        required: 'Please Enter Your Email'
      }
    }
  })
  </script>
